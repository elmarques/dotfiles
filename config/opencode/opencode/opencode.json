{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "autoupdate": true,
  "share": "disabled",
  "agent": {
    "build": {
      "description": "Default agent with thinking enabled",
      "mode": "primary",
      "model": "anthropic/claude-opus-4-5",
      "thinking": {
        "type": "enabled",
        "budgetTokens": 32000
      }
    },
    "fast": {
      "description": "Quick responses without extended thinking",
      "mode": "primary",
      "model": "anthropic/claude-opus-4-5",
      "thinking": {
        "type": "disabled"
      }
    }
  }
}
